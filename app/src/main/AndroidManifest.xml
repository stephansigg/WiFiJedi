<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crauterb.wifijedi" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera"

        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.crauterb.wifijedi.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.crauterb.wifijedi.NetworkChecker"
            android:label="@string/title_activity_network_checker" >
        </activity>
        <activity
            android:name="com.crauterb.wifijedi.NetworkScanner"
            android:label="@string/title_activity_network_scanner" >
        </activity>
        <activity
            android:name="com.crauterb.wifijedi.Slideshow"
            android:label="@string/title_activity_slideshow" >
        </activity>
        <activity
            android:name="com.crauterb.wifijedi.RecordThingy"
            android:label="@string/title_activity_record_thingy" >
        </activity>
        <activity
            android:name="com.crauterb.wifijedi.DecisionAcivity"
            android:label="@string/title_activity_decision_acivity" >
        </activity>
        <activity
            android:name="com.crauterb.wifijedi.Snapshot"
            android:label="@string/title_activity_snapshot" >
        </activity>
    </application>

</manifest>
